<article>
<section>
  <%if @project.tasks.empty? %>
    No tasks created for the project.
  <% else %>
    <%  @project.tasks.each do |t| %>
      <%=t.name %> assigned to <%=t.user.email %><br />
    <% end %>
  <% end %>
  <br />
   Create a new task:
   <%=render "/tasks/form" %>
</section>
</article>
<aside>
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @project.name %> (<%=@project.author.email%>)
</p>

<p>
  <b>Desc:</b>
  <%= @project.desc %>
</p>

<p>
  <b>Cost:</b>
  <%= @project.cost %>
</p>

<p>
  <b>Deadline:</b>
  <%= @project.deadline %>
</p>

<p>
  <b>Collaborators:</b>
  <% if @project.users.empty? %>
    No collaborators
  <% else %>
    <% @project.users.each do |u| %>
      <%= u.email %>
    <% end %>
  <% end %>
  <br />

</p>

<hr />

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
</aside>